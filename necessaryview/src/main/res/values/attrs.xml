<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="RectangleView">

        <!-- 高比宽 -->
        <attr name="heightWidthRatio" format="float|reference" />
        <attr name="baseOnWidthOrHeight" format="boolean" />
    </declare-styleable>
    <declare-styleable name="ShapeDrawableView">
        <!-- 高比宽 -->
        <attr name="shape_heightWidthRatio" format="float|reference" />
        <attr name="shape_baseOnWidthOrHeight" format="boolean" />
        <attr name="colorFill" format="color|reference" />
        <attr name="shape_colorRipple" format="color|reference" />
        <attr name="shape_haveRipple" format="boolean" />

        <!--???????????????????????????????????????????????????????????????-->
        <attr name="radiusCorner" format="dimension|reference" />
        <attr name="radiusTopLeft" format="dimension|reference" />
        <attr name="radiusTopRight" format="dimension|reference" />
        <attr name="radiusBottomRight" format="dimension|reference" />
        <attr name="radiusBottomLeft" format="dimension|reference" />
        <attr name="radiusGradient" format="dimension|reference" />
        <!--??????????????????????????????????????????????????????????????-->
        <attr name="colorStart" format="color|reference" />
        <attr name="colorCenter" format="color|reference" />
        <attr name="colorEnd" format="color|reference" />
        <attr name="centerX" format="float|reference" />
        <attr name="centerY" format="float|reference" />
        <attr name="angle" format="integer|reference" />
        <!--??????????????????????????????????????????????????????????-->
        <attr name="strokeWidth" format="dimension|reference" />
        <attr name="strokePaddingLeft" format="dimension|reference" />
        <attr name="strokePaddingTop" format="dimension|reference" />
        <attr name="strokePaddingRight" format="dimension|reference" />
        <attr name="strokePaddingBottom" format="dimension|reference" />
        <attr name="strokeColor" format="color|reference" />
        <attr name="strokeDashWidth" format="dimension|reference" />
        <attr name="strokeDashGap" format="dimension|reference" />


        <attr name="orientationGradient">
            <enum name="top_bottom" value="0" />
            <enum name="tr_bl" value="1" />
            <enum name="right_left" value="2" />
            <enum name="br_tl" value="3" />
            <enum name="bottom_top" value="4" />
            <enum name="bl_tr" value="5" />
            <enum name="left_right" value="6" />
            <enum name="tl_br" value="7" />
        </attr>
        <attr name="gradientType">
            <enum name="linear_gradient" value="0" />
            <enum name="radial_gradient" value="1" />
            <enum name="sweep_gradient" value="2" />
        </attr>
        <attr name="shapeType">
            <enum name="rectangle" value="0" />
            <enum name="oval" value="1" />
            <enum name="line" value="2" />
            <enum name="ring" value="3" />
        </attr>

    </declare-styleable>

    <declare-styleable name="RippleView" >
        <attr name="colorRipple" format="color|reference" />
        <attr name="haveRipple" format="boolean" />


    </declare-styleable>
    <declare-styleable name="RippleImageView" >
        <attr name="iv_colorRipple" format="color|reference" />
        <attr name="iv_haveRipple" format="boolean" />
        <attr name="rippleOver" format="boolean" />
        <attr name="haveFilter" format="boolean" />
        <attr name="filterLightNumber" format="float|reference" />
        <attr name="filterLightOrDark" format="boolean" />


    </declare-styleable>

    <declare-styleable name="SelectorCheckBox">
        <attr name="backgroundUnChecked" format="reference|color" />
        <attr name="backgroundChecked" format="reference|color" />
        <attr name="textColorUnChecked" format="reference|color" />
        <attr name="textColorChecked" format="reference|color" />
        <attr name="buttonUnChecked" format="reference" />
        <attr name="buttonChecked" format="reference" />
    </declare-styleable>
    <declare-styleable name="SelectorImageView">
        <attr name="bgUnChecked" format="reference|color" />
        <attr name="bgChecked" format="reference|color" />
        <attr name="srcUnChecked" format="reference" />
        <attr name="srcChecked" format="reference" />
        <attr name="checked" format="boolean" />
    </declare-styleable>
</resources>